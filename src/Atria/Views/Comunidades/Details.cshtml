@model Atria.Models.Comunidade
@{
    ViewData["Title"] = "Detalhes da Comunidade";
}

<div class="page-container">
    <div class="page-card">

        <div class="page-card-header d-flex justify-content-between align-items-center">
            <h1><i class="bi bi-people-fill me-2"></i>@Model.Nome</h1>
            <a asp-action="Index" class="btn btn-light text-dark fw-bold">
                <i class="bi bi-arrow-left me-1"></i>Voltar
            </a>
        </div>

        <div class="page-card-body p-4">

            <div class="mb-4">
                <h5 class="text-primary fw-bold">Sobre esta comunidade</h5>
                <p class="lead fs-6 text-secondary">@Model.Descricao</p>
                <small class="text-muted">
                    <i class="bi bi-calendar3 me-1"></i> Criada em @Model.DataCriacao.ToString("dd/MM/yyyy")
                </small>
            </div>

            <hr class="my-4">

            <div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="text-dark fs-4"><i class="bi bi-grid-fill me-2"></i>Salas de Estudo</h3>

                    <a asp-controller="GruposEstudo" asp-action="Create" asp-route-comunidadeId="@Model.Id" class="btn btn-success btn-sm rounded-pill px-3">
                        <i class="bi bi-plus-lg me-1"></i>Nova Sala
                    </a>
                </div>

                @if (Model.GruposEstudo != null && Model.GruposEstudo.Count > 0)
                {
                <div class="list-group shadow-sm rounded-3 overflow-hidden">
                    @foreach (var grupo in Model.GruposEstudo)
                        {
                    <a href="/GruposEstudo/Details/@grupo.Id" class="list-group-item list-group-item-action p-3 d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="bg-light rounded p-2 me-3 text-muted">
                                <i class="bi bi-hash fs-4"></i>
                            </div>
                            <div>
                                <h5 class="mb-1 text-dark fw-bold">@grupo.Nome</h5>
                                <small class="text-muted d-block text-truncate" style="max-width: 400px;">
                                    @grupo.Descricao
                                </small>
                            </div>
                        </div>
                        <i class="bi bi-chevron-right text-secondary"></i>
                    </a>
                        }
                </div>
                }
                else
                {
                <div class="alert alert-light border text-center py-5">
                    <div class="mb-3">
                        <i class="bi bi-chat-square-text text-muted" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="text-muted">Nenhuma sala criada ainda</h5>
                    <p class="text-secondary mb-3">Crie salas temáticas para organizar as discussões.</p>
                    <a asp-controller="GruposEstudo" asp-action="Create" asp-route-comunidadeId="@Model.Id" class="fw-bold text-success text-decoration-none">
                        Criar a primeira sala agora
                    </a>
                </div>
                }
            </div>

            <div class="mt-5 pt-3 border-top d-flex justify-content-end gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-pencil me-1"></i> Editar Comunidade
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm">
                    <i class="bi bi-trash me-1"></i> Excluir
                </a>
            </div>

        </div>
    </div>
</div>