@model Atria.Models.Comunidade
@{
    ViewData["Title"] = "Criar Comunidade";
}

<div class="page-container">
    <div class="page-card">
        <div class="page-card-header">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="page-card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label class="form-label">Nome</label>
                    <input class="form-control" asp-for="Nome" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Descrição</label>
                    <textarea class="form-control" asp-for="Descricao"></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Criar</button>
                <a class="btn btn-secondary" href="/Comunidades">Cancelar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}