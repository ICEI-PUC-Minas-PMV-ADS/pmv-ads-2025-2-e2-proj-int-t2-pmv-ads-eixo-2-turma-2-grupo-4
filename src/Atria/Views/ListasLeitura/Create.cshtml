@model Atria.Models.ListaLeitura
@{
    ViewData["Title"] = "Criar Lista";
}

<div class="page-container">
    <div class="page-card">
        <div class="page-card-header">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="page-card-body">
            <form asp-action="Create" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input class="form-control" asp-for="Nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label"></label>
                    <textarea class="form-control" asp-for="Descricao"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Materiais</label>
                    @* Usamos MultiSelectList no controller, então asp-items funciona direto *@
                    <select class="form-select" name="materialIds" asp-items="@ViewBag.Materiais" multiple>
                    </select>
                    <div class="form-text">Segure "Ctrl" (ou "Command" no Mac) para selecionar mais de um material.</div>
                </div>

                <button class="btn btn-primary" type="submit">Criar</button>
                <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

                @* O div original  *@
                <div class="mb-3">
                    <label class="form-label">Materiais</label>

                    @* Verificamos se o ViewBag.Materiais tem algum item *@
                    @if (ViewBag.Materiais != null && ((SelectList)ViewBag.Materiais).Any()){
                        <select class="form-select" name="materialIds" asp-items="@ViewBag.Materiais" multiple>
                        </select>
                        <div class="form-text">Segure "Ctrl" (ou "Command" no Mac) para selecionar mais de um material.</div>
                    }
                    else{
                        <p class="text-muted">Nenhum material cadastrado no momento. Você pode criar a lista e adicionar materiais depois.</p>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}