@model IEnumerable<Atria.Models.ListaLeitura>
    @{
    ViewData["Title"] = "Listas de Leitura";
    }

    <div class="page-container">
        <div class="page-card">
            <div class="page-card-header d-flex justify-content-between align-items-center">
                <h1>@ViewData["Title"]</h1>
                <a class="btn btn-primary" asp-action="Create">
                    <i class="fas fa-plus me-1"></i> Nova Lista
                </a>
            </div>

            <div class="page-card-body">

                <div class="row g-4">
                    @foreach(var l in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="lista-leitura-card">

                            <div class="lista-leitura-imagem">
                                @{
                                    var primeiraImagem = l.ListaTemMateriais.FirstOrDefault()?.Material?.CAMINHOIMG;
                                    var caminhoImagem = !string.IsNullOrEmpty(primeiraImagem)
                                        ? $"~/resources/{primeiraImagem}"
                                        : "~/resources/placeholder.png";
                                }
                                <img src="@Url.Content(caminhoImagem)" alt="Capa da lista @l.Nome">
                            </div>

                            <div class="lista-leitura-conteudo">
                                <h5 class="lista-leitura-titulo">@l.Nome</h5>

                                @if (l.Usuario != null)
                                {
                                <div class="lista-leitura-criador">
                                    <i class="fas fa-user-edit me-1"></i> Por @l.Usuario.UserName
                                </div>
                                }

                                <p class="lista-leitura-descricao">
                                    @(l.Descricao ?? "Nenhuma descrição fornecida.")
                                </p>

                                <div class="lista-leitura-acoes">
                                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@l.Id">
                                        <i class="fas fa-eye me-1"></i> Ver
                                    </a>
                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@l.Id">
                                        <i class="fas fa-pen me-1"></i> Editar
                                    </a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@l.Id">
                                        <i class="fas fa-trash me-1"></i> Excluir
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                    @if (!Model.Any())
                {
                    <div class="col-12">
                        <div class="alert alert-secondary text-center" role="alert">
                            Nenhuma lista de leitura foi criada ainda. Seja o primeiro!
                        </div>
                    </div>
                }
                </div>
            </div>
        </div>
    </div>
