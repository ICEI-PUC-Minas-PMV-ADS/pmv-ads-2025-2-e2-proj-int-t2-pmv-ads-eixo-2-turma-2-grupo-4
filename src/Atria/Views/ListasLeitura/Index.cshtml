@model IEnumerable<Atria.Models.ListaLeitura>
    @{
    ViewData["Title"] = "Listas de Leitura";
    }

    <div class="page-container">
        <div class="page-card">
            <div class="page-card-header">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="page-card-body">

                <p><a class="btn btn-primary" href="/ListasLeitura/Create">Nova Lista</a></p>

                @* Remova o <div class="table-responsive">  e a <table> ... </table> *@

                <div class="row">
                    @* O loop foreach é o mesmo que você já tinha [cite: 19] *@
                    @foreach(var l in Model){
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@l.Nome</h5>
                                <p class="card-text flex-grow-1">@l.Descricao</p>

                                @* Os mesmos botões que você tinha[cite: 21], mas no card *@
                                <div class="mt-auto">
                                    <a class="btn btn-sm btn-info" href="/ListasLeitura/Details/@l.Id">Detalhes</a>
                                    <a class="btn btn-sm btn-warning" href="/ListasLeitura/Edit/@l.Id">Editar</a>
                                    <a class="btn btn-sm btn-danger" href="/ListasLeitura/Delete/@l.Id">Excluir</a>
                                </div>
                            </div>
                        </div>
                    </div>
    }
                </div>

            </div>
        </div>
    </div>
