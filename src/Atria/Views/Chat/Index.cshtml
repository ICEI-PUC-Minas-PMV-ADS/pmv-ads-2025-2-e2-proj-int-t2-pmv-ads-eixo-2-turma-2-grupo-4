@model IEnumerable<Atria.Models.InboxItemViewModel>
    @{
    ViewData["Title"] = "Minhas Conversas";
    }

    <div class="page-container">
        <div class="page-card">
            <div class="page-card-header">
                <h1><i class="bi bi-chat-dots-fill me-2"></i>Minhas Conversas</h1>
            </div>
            <div class="list-group list-group-flush">
                @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                <a asp-action="Privado" asp-route-userId="@item.Usuario.Id" class="list-group-item list-group-item-action p-3 d-flex align-items-center">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm"
                         style="width: 50px; height: 50px; font-size: 1.2rem;">
                        @(item.Usuario.Nome?.Substring(0,1).ToUpper() ?? "?")
                    </div>

                    <div class="flex-grow-1 overflow-hidden">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-1 text-dark fw-bold">@item.Usuario.Nome</h5>
                            <small class="text-muted">@item.DataUltimaMensagem.ToLocalTime().ToString("dd/MM HH:mm")</small>
                        </div>
                        <p class="mb-0 text-secondary text-truncate">
                            <i class="bi bi-reply-fill me-1"></i> @item.UltimaMensagem
                        </p>
                    </div>
                </a>
                }
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox fs-1"></i>
                    <p class="mt-2">Você ainda não iniciou conversas privadas.</p>
                    <a asp-controller="Profile" asp-action="Pesquisar" class="btn btn-outline-primary mt-2">
                        Encontrar Pessoas
                    </a>
                </div>
            }
            </div>
        </div>
    </div>
