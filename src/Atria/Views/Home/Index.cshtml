@model IEnumerable<Atria.Models.Postagem>
    @{
    ViewData["Title"] = "Bem-vindo";
    }

    @if (User.Identity != null && User.Identity.IsAuthenticated)
{
    // ------------------------------------
    //  VISÃO: USUÁRIO LOGADO (SÓ O FEED)
    // ------------------------------------
    ViewData["Title"] = "Feed Principal";

    <h3 class="text-dark mb-4">Feed Principal</h3>

    <div class="feed-container" style="max-width: 800px; margin: auto;">
        @foreach (var post in Model)
        {
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center" style="font-size: 0.9em; background-color: #f8f9fa;">
                <span>
                    Postado por: <strong>@(post.Usuario?.UserName ?? "Anônimo")</strong>
                </span>
                <span class="text-muted">
                    @post.DataPostagem.ToString("dd/MM/yyyy 'às' HH:mm")
                </span>
            </div>
            <div class="card-body">
                <h4 class="card-title">
                    <a asp-controller="Postagens" asp-action="Details" asp-route-id="@post.Id" style="text-decoration: none; color: #212529;">
                        @Html.DisplayFor(modelItem => post.Titulo)
                    </a>
                </h4>
                <p class="card-text" style="white-space: pre-wrap;">
                    @Html.DisplayFor(modelItem => post.Conteudo)
                </p>
            </div>
            <div class="card-footer" style="background-color: #f8f9fa;">
                <a asp-controller="Postagens" asp-action="Details" asp-route-id="@post.Id" class="btn btn-sm btn-outline-primary">
                    Ver Discussão
                </a>
            </div>
        </div>
        }
    </div>
}
else
{
    // -----------------------------------------------
    //  VISÃO: USUÁRIO DESLOGADO (TELA "CLEAN")
    // -----------------------------------------------

    <div class="hero-section text-center text-white">
        <div class="hero-overlay">
            <h1 class="display-3">Bem-vindo ao Atria</h1>
            <p class="lead">Sua nova comunidade de estudos e compartilhamento de conhecimento.</p>
            <p>
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg mt-3">Quero participar</a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg mt-3">Já tenho conta</a>
            </p>
        </div>
    </div>
}
