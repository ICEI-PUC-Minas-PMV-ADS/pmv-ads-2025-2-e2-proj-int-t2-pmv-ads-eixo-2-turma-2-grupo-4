@{
    ViewData["Title"] = "Início";
}

<div class="jumbotron text-center py-5">
    <h1 class="display-4">Bem-vindo ao Atria</h1>
    <p class="lead">Plataforma colaborativa e gratuita para discussão de livros e conteúdos acadêmicos.</p>
    <hr class="my-4">
    <p>Crie listas de leitura, participe de comunidades, avalie materiais e conecte-se com outros estudantes e profissionais.</p>
    <div class="mt-4">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <a class="btn btn-primary btn-lg" href="/Materiais" role="button">Ver Materiais</a>
            <a class="btn btn-secondary btn-lg" href="/Comunidades" role="button">Explorar Comunidades</a>
        }
        else
        {
            <a class="btn btn-primary btn-lg" href="/Account/Register" role="button">Registrar-se</a>
            <a class="btn btn-secondary btn-lg" href="/Account/Login" role="button">Entrar</a>
        }
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">?? Materiais</h5>
                <p class="card-text">Explore livros, artigos e conteúdos de estudo compartilhados pela comunidade.</p>
                <a href="/Materiais" class="btn btn-outline-primary">Ver Materiais</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">?? Comunidades</h5>
                <p class="card-text">Participe de fóruns temáticos e conecte-se com outros leitores.</p>
                <a href="/Comunidades" class="btn btn-outline-primary">Explorar</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">?? Grupos de Estudo</h5>
                <p class="card-text">Crie ou participe de grupos de estudo sobre tópicos específicos.</p>
                <a href="/GruposEstudo" class="btn btn-outline-primary">Ver Grupos</a>
            </div>
        </div>
    </div>
</div>