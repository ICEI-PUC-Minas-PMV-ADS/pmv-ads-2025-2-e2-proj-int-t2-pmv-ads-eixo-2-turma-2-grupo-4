@model IEnumerable<Atria.Models.Postagem>
    @{
    ViewData["Title"] = "Início";
    }

    @if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <div class="page-container" style="max-width: 1000px; margin: auto; padding-top: 40px;">

        <div class="card mb-4 shadow-sm border-0" style="border-radius: 12px;">
            <div class="card-body p-4">
                <h5 class="card-title mb-3 text-dark fw-bold">
                    <i class="bi bi-pencil-square me-2 text-primary"></i>O que vamos discutir hoje?
                </h5>

                <form asp-controller="Postagens" asp-action="Create" method="post" class="ajax-form">
                    <input type="hidden" name="NoForumGeral" value="true" />
                    <input type="hidden" name="FKComunidade" value="" />
                    <input type="hidden" name="FKGrupo" value="" />

                    <div class="mb-3">
                        <input type="text" name="Titulo" class="form-control form-control-lg mb-2 bg-light border-0" placeholder="Dê um título interessante..." required maxlength="200" />
                        <textarea name="Conteudo" class="form-control bg-light border-0" rows="2" placeholder="Compartilhe conhecimento ou tire dúvidas..." required maxlength="5000"></textarea>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted"><i class="bi bi-globe me-1"></i>Postando no Fórum Geral</small>
                        <button type="submit" class="btn btn-primary px-4 rounded-pill fw-bold">
                            <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true"></span>
                            <span>Publicar</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (!Model.Any())
        {
        <div class="text-center py-5">
            <div class="mb-3 text-muted opacity-50">
                <i class="bi bi-chat-square-quote fs-1"></i>
            </div>
            <h5 class="text-muted">O feed está silencioso...</h5>
            <p class="text-muted small">Seja a primeira pessoa a iniciar uma conversa!</p>
        </div>
        }
        else
        {
        <div class="feed-container">
            @foreach (var post in Model)
                {
                    var qtdComentarios = post.Comentarios?.Count ?? 0;
                    var collapseId = "collapseComentarios_" + post.Id;

                    // Estrutura idêntica à aba Postagens
            <div class="postagem-card mb-3 border rounded bg-white position-relative shadow-sm">

                <div class="p-3">
                    <div class="d-flex align-items-center gap-2 text-muted small mb-2">
                        <i class="bi bi-person-circle" style="font-size: 1.2rem;"></i>
                        <span class="fw-medium text-dark">@(post.Usuario?.Nome ?? "Usuário")</span>
                        <span>•</span>
                        <span>@post.DataPostagem.ToString("dd/MM/yyyy HH:mm")</span>

                        @if (post.FKComunidade != null && post.FKComunidade != 0)
                                {
                        <span>•</span>
                        <span class="text-primary fw-bold">
                            <i class="bi bi-people-fill"></i> @(post.Comunidade?.Nome ?? "Comunidade")
                        </span>
                                }
                                else if (post.FKGrupo != null && post.FKGrupo != 0)
                                {
                        <span>•</span>
                        <span class="text-success fw-bold">
                            <i class="bi bi-bookmark-fill"></i> @(post.GrupoEstudo?.Nome ?? "Grupo")
                        </span>
                                }
                                else
                                {
                        <span>•</span>
                        <span class="badge bg-info text-white" style="font-size: 0.7rem;">
                            Fórum Geral
                        </span>
                                }
                    </div>

                    <h6 class="postagem-titulo fw-bold mb-2 text-dark lh-sm" style="font-size: 1.1rem;">
                        <a asp-controller="Postagens" asp-action="Details" asp-route-id="@post.Id" asp-route-returnUrl="/Home" class="text-decoration-none text-dark stretched-link-fix">
                            @post.Titulo
                        </a>
                    </h6>

                    <p class="postagem-preview mb-3 text-secondary small" style="line-height: 1.4; max-height: 4em; overflow: hidden;">
                        @if (!string.IsNullOrEmpty(post.Conteudo))
                                {
                        @(post.Conteudo.Length > 200 ? post.Conteudo.Substring(0, 200) + "..." : post.Conteudo)
                                }
                    </p>

                    <div class="d-flex justify-content-between align-items-center mt-3 pt-2 border-top">
                        <div class="postagens-stats d-flex gap-3">
                            <button class="btn btn-sm btn-light text-muted d-flex align-items-center gap-1 border-0 px-2" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" style="z-index: 2; position: relative;">
                                <i class="bi bi-chat-dots"></i>
                                <span class="fw-semibold">@qtdComentarios</span>
                            </button>

                            <span class="text-muted small d-flex align-items-center gap-1 px-2">
                                <i class="bi bi-heart"></i>
                                <span class="fw-semibold">-</span>
                            </span>
                        </div>

                        <a asp-controller="Postagens" asp-action="Details" asp-route-id="@post.Id" asp-route-returnUrl="/Home" class="btn btn-sm btn-outline-primary rounded-pill px-3" style="z-index: 2; position: relative;">
                            Ver Discussão <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>

                <div class="collapse bg-light rounded-bottom" id="@collapseId">
                    <div class="p-3 border-top">
                        @if (post.Comentarios != null && post.Comentarios.Any())
                                {
                        <div class="mb-3" style="max-height: 300px; overflow-y: auto;">
                            @foreach(var comentario in post.Comentarios.OrderBy(c => c.DataComentario))
                                        {
                            <div class="d-flex mb-2">
                                <div class="me-2 mt-1">
                                    <i class="bi bi-person-circle text-secondary"></i>
                                </div>
                                <div class="bg-white p-2 px-3 rounded-3 shadow-sm flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <strong style="font-size: 0.8rem; color: #0d2c4b;">@(comentario.Usuario?.Nome ?? "Usuário")</strong>
                                        <small class="text-muted" style="font-size: 0.65rem;">@comentario.DataComentario.ToString("dd/MM HH:mm")</small>
                                    </div>
                                    <p class="mb-0 small text-dark lh-sm">@comentario.Conteudo</p>
                                </div>
                            </div>
                                        }
                        </div>
                                }
                                else
                                {
                        <p class="text-muted small text-center mb-3 fst-italic">Ninguém comentou ainda.</p>
                                }

                        <form asp-controller="Comentario" asp-action="Create" method="post" class="d-flex gap-2 ajax-form" style="position: relative; z-index: 2;">
                            <input type="hidden" name="FKPostagem" value="@post.Id" />
                            <input type="text" name="Conteudo" class="form-control form-control-sm rounded-pill" placeholder="Escreva um comentário..." required autocomplete="off" />
                            <button type="submit" class="btn btn-sm btn-primary rounded-circle" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">
                                <i class="bi bi-send-fill" style="font-size: 0.8rem;"></i>
                                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                            </button>
                        </form>
                    </div>
                </div>

            </div>
                }
        </div>
        }
    </div>
}
else
{
    <div class="hero-section text-center text-white">
        <div class="hero-overlay">
            <h1 class="display-3 fw-bold">Bem-vindo ao Atria</h1>
            <p class="lead">Sua comunidade de aprendizado.</p>
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-2 shadow">Quero participar</a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg shadow">Já tenho conta</a>
            </div>
        </div>
    </div>
}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const forms = document.querySelectorAll('.ajax-form');

            forms.forEach(form => {
                form.addEventListener('submit', function (e) {
                    e.preventDefault();

                    const submitBtn = form.querySelector('button[type="submit"]');
                    const spinner = submitBtn.querySelector('.spinner-border');
                    const icon = submitBtn.querySelector('.bi-send-fill') || submitBtn.querySelector('span:not(.spinner-border)');

                    submitBtn.disabled = true;
                    if (spinner) spinner.classList.remove('d-none');
                    if (icon) icon.style.display = 'none';

                    const formData = new FormData(form);

                    fetch(form.action, {
                        method: 'POST',
                        body: formData
                    })
                        .then(response => {
                            if (response.ok) {
                                window.location.reload();
                            } else {
                                alert('Erro ao processar. Tente novamente.');
                                submitBtn.disabled = false;
                                if (spinner) spinner.classList.add('d-none');
                                if (icon) icon.style.display = '';
                            }
                        })
                        .catch(error => {
                            console.error('Erro:', error);
                            alert('Erro de conexão.');
                            submitBtn.disabled = false;
                        });
                });
            });
        });
    </script>
