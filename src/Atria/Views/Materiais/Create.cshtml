@model Atria.Models.Material
@{
    ViewData["Title"] = "Criar Material";
}

<div class="page-container">
    <div class="page-card">
        <div class="page-card-header">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="page-card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Titulo" class="form-label"></label>
                    <input class="form-control" asp-for="Titulo" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label"></label>
                    <textarea class="form-control" asp-for="Descricao"></textarea>
                </div>
                <div class="mb-3">
                    <div class="form-group">
                        <label asp-for="Tipo" class="form-label"></label> 
                        <select asp-for="Tipo" class="form-select">
                            <option value="Livro">Livro</option> 
                            <option value="Artigo">Artigo</option> 
                        </select>
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Criar</button>
                <a class="btn btn-secondary" href="/Materiais">Cancelar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}