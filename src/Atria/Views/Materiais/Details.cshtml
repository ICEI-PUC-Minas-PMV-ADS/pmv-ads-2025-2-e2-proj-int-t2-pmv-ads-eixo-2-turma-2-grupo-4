@model Atria.Models.Material
@{
    ViewData["Title"] = "Detalhes do Material";
}

<div class="page-container">
    <div class="page-card">
        <div class="page-card-header">
            <h1>@Model.Titulo</h1>
        </div>
        <div class="page-card-body">
            <p><strong>Descrição:</strong> @Model.Descricao</p>
            <p><strong>Tipo:</strong> @Model.Tipo</p>
            <p><strong>Criador:</strong> @Model.Criador?.Nome</p>
            <p><strong>Data:</strong> @Model.DataCriacao.ToString("yyyy-MM-dd")</p>
            <hr />
            <p><a class="btn btn-secondary" href="/Materiais">Voltar</a></p>
        </div>
    </div>
</div>