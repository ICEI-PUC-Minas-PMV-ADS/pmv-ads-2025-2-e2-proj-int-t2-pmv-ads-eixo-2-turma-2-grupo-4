@model Atria.Models.Material
@{
    ViewData["Title"] = "Editar Material";
}
<h1>Editar Material</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">Título</label>
        <input class="form-control" asp-for="Titulo" />
    </div>
    <div class="mb-3">
        <label class="form-label">Descrição</label>
        <textarea class="form-control" asp-for="Descricao"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Tipo</label>
        <input class="form-control" asp-for="Tipo" />
    </div>
    <button class="btn btn-primary" type="submit">Salvar</button>
    <a class="btn btn-secondary" href="/Materiais">Cancelar</a>
</form>