@model Atria.Models.Material
@{
    ViewData["Title"] = "Excluir Material";
}

<div class="page-container" style="max-width: 700px;">
    <div class="page-card border-danger">
        <div class="page-card-header bg-danger text-white">
       <h1 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewData["Title"]</h1>
      </div>
        <div class="page-card-body">
       <!-- Alerta de Aviso -->
   <div class="alert alert-danger d-flex align-items-start" role="alert">
    <i class="bi bi-exclamation-circle-fill fs-4 me-3 flex-shrink-0"></i>
       <div>
    <h5 class="alert-heading mb-2">Atenção! Esta ação é irreversível</h5>
          <p class="mb-0">
            Você está prestes a excluir permanentemente este material do sistema. 
        Todas as informações associadas, incluindo avaliações e referências em listas de leitura, 
    serão perdidas.
        </p>
    </div>
 </div>

    <!-- Informações do Material -->
      <div class="card mb-4">
    <div class="card-header bg-light">
    <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>Material a ser excluído</h5>
     </div>
       <div class="card-body">
   <dl class="row mb-0">
  <dt class="col-sm-3 text-muted">Título:</dt>
      <dd class="col-sm-9">
        <strong class="fs-5">@Model.Titulo</strong>
     @if (!string.IsNullOrEmpty(Model.Tipo))
     {
         <span class="badge bg-primary ms-2">@Model.Tipo</span>
    }
       </dd>

           @if (!string.IsNullOrEmpty(Model.Descricao))
        {
        <dt class="col-sm-3 text-muted">Descrição:</dt>
   <dd class="col-sm-9" style="white-space: pre-wrap;">@Model.Descricao</dd>
    }

     <dt class="col-sm-3 text-muted">Criado por:</dt>
  <dd class="col-sm-9">
    <i class="bi bi-person-circle me-1"></i>
     @(Model.Criador?.Nome ?? "Desconhecido")
 </dd>

       <dt class="col-sm-3 text-muted">Data de Criação:</dt>
   <dd class="col-sm-9">
       <i class="bi bi-calendar3 me-1"></i>
     @Model.DataCriacao.ToString("dd/MM/yyyy 'às' HH:mm")
       </dd>

        @if (!string.IsNullOrEmpty(Model.Status))
      {
     <dt class="col-sm-3 text-muted">Status:</dt>
     <dd class="col-sm-9">
    <span class="badge @(Model.Status == "Aprovado" ? "bg-success" : Model.Status == "Pendente" ? "bg-warning text-dark" : "bg-secondary")">
       @Model.Status
     </span>
      </dd>
    }
   </dl>
    </div>
   </div>

       <!-- Estatísticas (se houver) -->
    @{
     var totalAvaliacoes = Model.Avaliacoes?.Count ?? 0;
    var totalListas = Model.ListaTemMateriais?.Count ?? 0;
 var mediaAvaliacoes = totalAvaliacoes > 0 && Model.Avaliacoes != null ? Model.Avaliacoes.Average(a => (double)a.Nota) : 0;
     }

      @if (totalAvaliacoes > 0 || totalListas > 0)
        {
    <div class="alert alert-warning">
   <h6 class="alert-heading mb-3">
   <i class="bi bi-graph-up me-2"></i>Impacto da Exclusão
   </h6>
        <ul class="mb-0">
      @if (totalAvaliacoes > 0)
    {
     <li>
     <strong>@totalAvaliacoes avaliação@(totalAvaliacoes != 1 ? "ões" : "")</strong> 
     serão permanentemente excluídas
   @if (mediaAvaliacoes > 0)
        {
       <span class="text-muted">(média: @mediaAvaliacoes.ToString("F1") ?)</span>
           }
  </li>
     }
    @if (totalListas > 0)
       {
    <li>
        <strong>@totalListas lista@(totalListas != 1 ? "s" : "") de leitura</strong> 
   perderão a referência a este material
 </li>
     }
     </ul>
      </div>
 }

 <hr class="my-4">

            <!-- Formulário de Confirmação -->
       <form asp-action="Delete" method="post" id="formExcluir">
       <input type="hidden" asp-for="Id" />
    
     <!-- Checkbox de Confirmação -->
  <div class="form-check mb-4">
   <input class="form-check-input" type="checkbox" id="confirmarExclusao" required>
     <label class="form-check-label fw-bold" for="confirmarExclusao">
   Eu entendo que esta ação é irreversível e confirmo a exclusão
   </label>
     </div>

    <!-- Botões de Ação -->
  <div class="d-flex gap-2 justify-content-between">
    <a class="btn btn-secondary" href="/Materiais/Details/@Model.Id">
        <i class="bi bi-arrow-left me-2"></i>Voltar
 </a>
          <div class="d-flex gap-2">
         <a class="btn btn-outline-secondary" href="/Materiais">
           <i class="bi bi-x-circle me-2"></i>Cancelar
    </a>
       <button class="btn btn-danger" type="submit" id="btnExcluir" disabled>
    <i class="bi bi-trash-fill me-2"></i>Confirmar Exclusão
      </button>
            </div>
        </div>
      </form>
        </div>
    </div>
</div>

<style>
    .page-card.border-danger {
  border-width: 2px !important;
    }

    .alert-danger {
   border-left: 4px solid #dc3545;
    }

    .alert-warning {
    border-left: 4px solid #ffc107;
    }

    #btnExcluir:disabled {
 opacity: 0.5;
     cursor: not-allowed;
    }

    #btnExcluir:not(:disabled):hover {
  background-color: #c82333;
 border-color: #bd2130;
  transform: scale(1.02);
  transition: all 0.2s ease;
    }
</style>

<script>
 // Habilitar botão de exclusão apenas quando checkbox marcado
    const checkboxConfirmar = document.getElementById('confirmarExclusao');
    const btnExcluir = document.getElementById('btnExcluir');

    if (checkboxConfirmar && btnExcluir) {
   checkboxConfirmar.addEventListener('change', function() {
   btnExcluir.disabled = !this.checked;
       });
    }

    // Confirmação dupla antes de excluir
    document.getElementById('formExcluir').addEventListener('submit', function(e) {
      e.preventDefault();
  
  const confirmacao = confirm(
      '?? ÚLTIMA CONFIRMAÇÃO\n\n' +
     'Tem certeza ABSOLUTA que deseja excluir o material:\n' +
       '"@Model.Titulo"?\n\n' +
      'Esta ação NÃO PODE ser desfeita!'
 );

     if (confirmacao) {
       // Animação no botão
 btnExcluir.disabled = true;
  btnExcluir.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Excluindo...';
   
     // Enviar formulário
       this.submit();
 } else {
   // Desmarcar checkbox se cancelar
      checkboxConfirmar.checked = false;
     btnExcluir.disabled = true;
   }
    });

    // Prevenir saída acidental se checkbox marcado
    window.addEventListener('beforeunload', function(e) {
   if (checkboxConfirmar.checked) {
      e.preventDefault();
   e.returnValue = '';
            return '';
 }
    });
</script>