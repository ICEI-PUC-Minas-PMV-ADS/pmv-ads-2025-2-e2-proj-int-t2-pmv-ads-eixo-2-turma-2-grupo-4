@model Atria.Models.Postagem
@{
    ViewData["Title"] = "Detalhes da Postagem";
}

<div class="page-container">
    <div class="page-card">
        <div class="page-card-header">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="page-card-body">
            <blockquote class="blockquote">
                <p>@Model.Conteudo</p>
            </blockquote>
            <hr />
            <p><strong>Usuário:</strong> @Model.Usuario?.Nome</p>
            <p><strong>Comunidade:</strong> @Model.Comunidade?.Nome</p>
            <p><strong>Data:</strong> @Model.DataPostagem.ToString("yyyy-MM-dd")</p>
            <br />
            <p><a class="btn btn-secondary" href="/Postagens">Voltar</a></p>
        </div>
    </div>
</div>