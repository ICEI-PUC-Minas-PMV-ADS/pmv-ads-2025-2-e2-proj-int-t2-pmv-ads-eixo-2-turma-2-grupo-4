<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Atria</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cards-clicaveis.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column h-100">

    <nav class="sidebar">
        <a class="sidebar-brand" asp-controller="Home" asp-action="Index">
            <img src="~/images/atria-logo.jpg" alt="Atria Logo" id="sidebar-logo">
            <span>Atria</span>
        </a>

        <ul class="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Home"><i class="bi bi-house-door-fill"></i> Início</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Search" asp-action="Index">
                    <i class="bi bi-search"></i> <span>Pesquisar</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Chat" asp-action="Index">
                    <i class="bi bi-chat-dots-fill"></i> <span>Minhas Conversas</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/Comunidades"><i class="bi bi-people-fill"></i> Comunidades</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Postagens"><i class="bi bi-chat-left-text-fill"></i> Postagens</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/Materiais"><i class="bi bi-book-fill"></i> Materiais</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/ListasLeitura"><i class="bi bi-list-task"></i> Listas</a>
            </li>

            @if (User.Identity?.IsAuthenticated ?? false)
    {
            <li class="nav-item mt-2 pt-2 border-top border-secondary border-opacity-10">
                <a class="nav-link position-relative" href="#" id="notificacoes-link">
                    <i class="bi bi-bell-fill"></i> Notificações
                    <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle"
                          id="notificacoes-badge" style="display: none;">
                        0
                    </span>
                </a>
            </li>
    }
        </ul>

        <div class="sidebar-user">
            @if (User.Identity?.IsAuthenticated ?? false)
      {
            <a class="nav-link" href="/Profile/Index" title="Meu Perfil">
                <i class="bi bi-person-circle"></i> <span>Olá, <strong>@User.Identity.Name</strong></span>
            </a>
            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="nav-link btn" title="Logout">
                    <i class="bi bi-box-arrow-right"></i> <span>Logout</span>
                </button>
            </form>
}
            else
 {
            <a class="nav-link" href="/Account/Login"><i class="bi bi-box-arrow-in-right"></i> <span>Login</span></a>
            <a class="nav-link" href="/Account/Register"><i class="bi bi-person-plus"></i> <span>Registrar</span></a>
  }
        </div>
    </nav>

    <div class="main-content">
        <main class="flex-shrink-0">
            <div>
                @RenderBody()
            </div>
        </main>

        <footer class="footer mt-auto py-3">
            <div class="container text-center">
                <span style="color: rgba(255, 255, 255, 0.7);">© 2025 Atria - Plataforma Colaborativa de Estudo</span>
            </div>
        </footer>
    </div>

    <!-- Modal de Notificações -->
    @if (User.Identity?.IsAuthenticated ?? false)
  {
    <div class="modal fade" id="notificacoesModal" tabindex="-1" aria-labelledby="notificacoesModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="notificacoesModalLabel">
                        <i class="bi bi-bell-fill me-2"></i>Notificações
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-0">
                    <div id="notificacoes-list">
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-bell-slash fs-1"></i>
                            <p class="mt-2">Nenhuma notificação no momento</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-outline-danger" id="limpar-notificacoes">
                        <i class="bi bi-trash me-1"></i>Limpar Todas
                    </button>
                    <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
    <script>
        // ===== SISTEMA DE NOTIFICAÇÕES GLOBAL =====
        class NotificacoesSystem {
            static async getNotificacoes() {
                try {
                    const response = await fetch('/Notificacao/GetNotificacoes');
                    const data = await response.json();
                    if (data.success) {
                        return data.notificacoes.map(n => ({
                            id: n.id.toString(),
                            titulo: n.titulo,
                            mensagem: n.mensagem,
                            tipo: n.tipo,
                            link: n.link,
                            icone: n.icone,
                            cor: n.cor,
                            lida: n.lida,
                            data: n.data
                        }));
                    }
                    return [];
                } catch (error) {
                    console.error('Erro ao buscar notificações:', error);
                    return [];
                }
            }

            static async adicionarNotificacao(notificacao) {
                // As notificações são criadas no servidor, apenas atualizamos a interface
                await this.atualizarBadge();
                await this.renderizar();
            }

            static async marcarComoLida(id) {
                try {
                    const response = await fetch('/Notificacao/MarcarComoLida', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ notificacaoId: parseInt(id) })
                    });
                    const data = await response.json();
                    if (data.success) {
                        await this.atualizarBadge();
                    }
                } catch (error) {
                    console.error('Erro ao marcar notificação como lida:', error);
                }
            }

            static async limparTodas() {
                try {
                    const response = await fetch('/Notificacao/LimparTodas', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    });
                    const data = await response.json();
                    if (data.success) {
                        await this.atualizarBadge();
                        await this.renderizar();
                    }
                } catch (error) {
                    console.error('Erro ao limpar notificações:', error);
                }
            }

            static async atualizarBadge() {
                try {
                    const response = await fetch('/Notificacao/ContarNaoLidas');
                    const data = await response.json();
                    const naoLidas = data.count || 0;
                    const badge = document.getElementById('notificacoes-badge');

                    if (badge) {
                        if (naoLidas > 0) {
                            badge.textContent = naoLidas > 99 ? '99+' : naoLidas;
                            badge.style.display = 'inline-block';
                        } else {
                            badge.style.display = 'none';
                        }
                    }
                } catch (error) {
                    console.error('Erro ao atualizar badge:', error);
                }
            }

            static async renderizar() {
                const container = document.getElementById('notificacoes-list');
                if (!container) return;

                const notificacoes = await this.getNotificacoes();

                if (notificacoes.length === 0) {
                    container.innerHTML = `
       <div class="text-center py-4 text-muted">
                  <i class="bi bi-bell-slash fs-1"></i>
        <p class="mt-2">Nenhuma notificação no momento</p>
        </div>
                `;
                    return;
                }

                container.innerHTML = notificacoes.map(notif => `
              <div class="notificacao-item p-3 border-bottom ${notif.lida ? '' : 'bg-light'}"
         data-id="${notif.id}" style="cursor: pointer;"
         onclick="NotificacoesSystem.abrirNotificacao('${notif.id}', '${notif.link || ''}')">
           <div class="d-flex">
             <div class="flex-shrink-0">
       <i class="bi ${notif.icone || 'bi-bell'} fs-4 ${notif.cor || 'text-primary'}"></i>
           </div>
            <div class="flex-grow-1 ms-3">
         <div class="d-flex justify-content-between align-items-start">
           <h6 class="mb-1">${notif.titulo}</h6>
<small class="text-muted">${this.formatarTempo(notif.data)}</small>
                   </div>
       <p class="mb-1 small">${notif.mensagem}</p>
              ${notif.link ? `<span class="badge bg-primary">Ver detalhes</span>` : ''}
</div>
       </div>
              </div>
       `).join('');
            }

            static async abrirNotificacao(id, link) {
                await this.marcarComoLida(id);
                if (link) {
                    window.location.href = link;
                }
            }

            static formatarTempo(dataISO) {
                const data = new Date(dataISO);
                const agora = new Date();
                const diff = Math.floor((agora - data) / 1000);

                if (diff < 60) return 'Agora';
                if (diff < 3600) return `${Math.floor(diff / 60)}min`;
                if (diff < 86400) return `${Math.floor(diff / 3600)}h`;
                return `${Math.floor(diff / 86400)}d`;
            }
        }

        // Inicializar sistema
        document.addEventListener('DOMContentLoaded', function () {
            NotificacoesSystem.atualizarBadge();

            // Abrir modal
            const notifLink = document.getElementById('notificacoes-link');
            if (notifLink) {
                notifLink.addEventListener('click', async function (e) {
                    e.preventDefault();
                    await NotificacoesSystem.renderizar();
                    const modal = new bootstrap.Modal(document.getElementById('notificacoesModal'));
                    modal.show();
                });
            }

            // Limpar notificações
            const btnLimpar = document.getElementById('limpar-notificacoes');
            if (btnLimpar) {
                btnLimpar.addEventListener('click', async function () {
                    if (confirm('Deseja limpar todas as notificações?')) {
                        await NotificacoesSystem.limparTodas();
                    }
                });
            }

            // Atualizar badge a cada 30 segundos
            setInterval(() => {
                NotificacoesSystem.atualizarBadge();
            }, 30000);
        });

        // Expor globalmente
        window.NotificacoesSystem = NotificacoesSystem;
    </script>
    }

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // 1. Pega a URL atual (ex: /Chat/Index)
            var path = window.location.pathname.toLowerCase();

            // 2. Pega todos os links da sidebar
            var links = document.querySelectorAll('.sidebar-nav .nav-link');

            links.forEach(function (link) {
                // 3. Pega o destino do link (ex: /chat)
                var href = link.getAttribute('href');

                if (href) {
                    href = href.toLowerCase();

                    // 4. Se a URL atual COMEÇA com o link (ex: /chat/privado começa com /chat)
                    // O href.length > 1 evita que o link "/" (Home) fique ativo em tudo
                    if (path === href || (href.length > 1 && path.startsWith(href))) {
                        link.classList.add('active');
                    }
                }
            });
        });
    </script>
</body>
</html></html>o