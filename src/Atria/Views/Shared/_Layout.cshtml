<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Atria</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column h-100">
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow-sm">
        <div class="container">

            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/atria-logo.jpg" alt="Atria Logo" id="navbar-logo" class="me-2">
                <span id="brand-text">Início</span>
            </a>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" href="/Materiais">Materiais</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Comunidades">Comunidades</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Postagens">Postagens</a></li>
                    <li class="nav-item"><a class="nav-link" href="/GruposEstudo">Grupos</a></li>
                    <li class="nav-item"><a class="nav-link" href="/ListasLeitura">Listas</a></li>
                </ul>
            </div>

            <ul class="navbar-nav ms-auto flex-row align-items-center">
                @if (User.Identity?.IsAuthenticated ?? false)
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/Profile/Index" title="Meu Perfil">
                        <i class="bi bi-person-circle"></i>
                        <span class="d-none d-lg-inline">Meu Perfil</span>
                    </a>
                </li>
                <li class="nav-item">
                    <span class="nav-link text-dark text-nowrap">Olá, <strong>@User.Identity.Name</strong></span>
                </li>
                <li class="nav-item">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-link nav-link" style="border:none;cursor:pointer;" title="Logout">
                            <i class="bi bi-box-arrow-right"></i>
                            <span class="d-none d-lg-inline">Logout</span>
                        </button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item"><a class="nav-link" href="/Account/Login"><i class="bi bi-box-arrow-in-right"></i> Login</a></li>
                <li class="nav-item"><a class="nav-link" href="/Account/Register"><i class="bi bi-person-plus"></i> Registrar</a></li>
            }
            </ul>

            <button class="navbar-toggler ms-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

        </div>
    </nav>

    <main class="flex-shrink-0">
        <div>
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto py-3">
        <div class="container text-center">
            <span style="color: rgba(255, 255, 255, 0.7);">© 2025 Atria - Plataforma Colaborativa de Estudo</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>