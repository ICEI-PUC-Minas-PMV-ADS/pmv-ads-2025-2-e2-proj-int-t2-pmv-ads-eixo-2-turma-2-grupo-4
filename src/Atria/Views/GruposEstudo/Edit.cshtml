@model Atria.Models.GrupoEstudo
@{
    ViewData["Title"] = "Editar Grupo";
}
<h1>Editar Grupo</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input class="form-control" asp-for="Nome" />
    </div>
    <div class="mb-3">
        <label class="form-label">Descrição</label>
        <textarea class="form-control" asp-for="Descricao"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Comunidade (opcional)</label>
        <input class="form-control" asp-for="FKComunidade" />
    </div>
    <button class="btn btn-primary" type="submit">Salvar</button>
    <a class="btn btn-secondary" href="/GruposEstudo">Cancelar</a>
</form>