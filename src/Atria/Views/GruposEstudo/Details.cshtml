@model Atria.Models.GrupoEstudo
@{
    ViewData["Title"] = Model.Nome;
    // Tenta pegar o ID do usuário logado com segurança
    var userIdClaim = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
    int currentUserId = 0;
    if (userIdClaim != null)
    {
        int.TryParse(userIdClaim.Value, out currentUserId);
    }
}

<div class="page-container">
    <div class="card border-0 shadow-sm mb-3 bg-white">
        <div class="card-body p-3 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="fw-bold m-0"><i class="bi bi-hash text-muted"></i> @Model.Nome</h4>
                <small class="text-muted">@Model.Descricao</small>
            </div>
            <a asp-controller="Comunidades" asp-action="Details" asp-route-id="@Model.FKComunidade" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-return-left"></i> Voltar
            </a>
        </div>
    </div>

    <div class="card border shadow-sm" style="height: 70vh; display: flex; flex-direction: column;">

        <div class="card-body bg-light p-4" id="chat-scroll" style="flex-grow: 1; overflow-y: auto; scroll-behavior: smooth;">
            @if (Model.Mensagens != null && Model.Mensagens.Any())
            {
            @foreach (var msg in Model.Mensagens)
                {
                    bool souEu = msg.FKRemetente == currentUserId;

            <div class="d-flex mb-3 @(souEu ? "justify-content-end" : "justify-content-start")">

                @if (!souEu)
                        {
                <div class="me-2 mt-1">
                    <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 32px; height: 32px; font-size: 12px;">
                        @(msg.Remetente?.Nome?.Substring(0,1).ToUpper() ?? "?")
                    </div>
                </div>
                        }

                <div style="max-width: 75%;">
                    @if(!souEu)
                            {
                    <div class="small fw-bold text-secondary ms-1">@msg.Remetente?.Nome</div>
                            }

                    <div class="p-2 px-3 rounded-3 shadow-sm text-break position-relative"
                         style="background-color: @(souEu ? "#0d6efd" : "#fff");
                                        color: @(souEu ? "#fff" : "#212529");
                                        border-bottom-right-radius: @(souEu ? "0" : "1rem");
                                        border-bottom-left-radius: @(!souEu ? "0" : "1rem");">
                        @msg.Conteudo
                        <div class="text-end mt-1" style="font-size: 0.65rem; opacity: 0.7;">
                            @msg.DataEnvio.ToLocalTime().ToString("HH:mm")
                        </div>
                    </div>
                </div>
            </div>
                }
            }
            else
            {
            <div class="text-center py-5 mt-5 opacity-50">
                <i class="bi bi-chat-quote fs-1"></i>
                <p class="mt-2">O chat está vazio. Diga olá!</p>
            </div>
            }
        </div>

        <div class="card-footer bg-white p-3 border-top">
            <form asp-controller="Mensagens" asp-action="Enviar" method="post" class="d-flex gap-2" autocomplete="off">

                <input type="hidden" name="grupoId" value="@Model.Id" />

                <input type="text" name="conteudo" class="form-control bg-light"
                       placeholder="Conversar em #@Model.Nome..." required />

                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-send-fill"></i>
                </button>
            </form>
        </div>

    </div>
</div>

<script>
    window.onload = function() {
        var chat = document.getElementById("chat-scroll");
        if(chat) chat.scrollTop = chat.scrollHeight;
    }
</script>