@model Atria.Models.GrupoEstudo
@{
    ViewData["Title"] = "Excluir Grupo";
}
<h1>Excluir Grupo</h1>
<p>Tem certeza que deseja excluir <strong>@Model.Nome</strong> ?</p>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger" type="submit">Excluir</button>
    <a class="btn btn-secondary" href="/GruposEstudo">Cancelar</a>
</form>